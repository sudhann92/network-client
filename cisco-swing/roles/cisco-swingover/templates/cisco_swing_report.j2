{% for _host in ansible_play_hosts_all %}
    {% if condition_type is defined and condition_type|lower == "even" %}
        {% if hostvars[_host]['ospf_cost_line'] == "8000" %}
            {{_host}} : {{Singtel_link_value}} : Primary
        {% else %}
            {{_host}} : {{M1_link_value}} : Primary
        {% endif %}
    {% if condition_type is defined and condition_type|lower == "odd" %}
       {% if hostvars[_host]['ospf_cost_line'] == "2000" %}
            {{_host}} : {{M1_link_value}} : Primary
        {% else %}
            {{_host}} : {{Singtel_link_value}} : Primary
        {% endif %}
{% endfor %}